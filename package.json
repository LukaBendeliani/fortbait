{
  "name": "multiplayer-game",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "npm run dev -w @game/server",
    "dev:client": "npm run dev -w @game/client",
    "build": "npm run build -w @game/shared && npm run build -w @game/server && npm run build -w @game/client"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  }
}
